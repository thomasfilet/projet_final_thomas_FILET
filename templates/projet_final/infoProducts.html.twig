            {% for montre in montre_object %}
                <a href="{{path('app_montre_id',{id:montre.getId})}}" class="item mx-8 relative">
                    <img class="imgage" src='{{montre.getImage}}'></img>
                    <div class="w-full mt-2 text-center">
                        <h2 class="text-2xl font-bold text-white pt-2 uppercase"> {{montre.getModel}}</h1>
                        <h3 class="titre_color text-lg pb-2">{{montre.getMake}}</h1>
